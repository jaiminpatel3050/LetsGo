<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/regcolor"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/animation_list">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:drawableLeft="@drawable/ic_dialpad_black_24dp"
            android:drawableRight="@drawable/ic_dialpad_black_24dp"
            android:drawableTint="@android:color/white"
            android:text="ʀᴇɢɪꜱᴛᴇʀ"
            android:textColor="#ffffff"
            android:textSize="35dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editText1"
            style="@style/edittext_style"
            android:layout_below="@+id/textView3"
            android:layout_marginTop="49dp"
            android:drawableLeft="@drawable/ic_account_circle_black_24dp"
            android:focusable="true"
            android:hint="Name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editText2"
            style="@style/edittext_style"
            android:layout_below="@+id/editText2"
            android:layout_alignParentStart="true"
            android:drawableLeft="@drawable/ic_phone_android_black_24dp"
            android:ems="10"
            android:hint="Mobile No"
            android:inputType="text" />


        <EditText
            android:id="@+id/editText3"
            style="@style/edittext_style"
            android:layout_below="@+id/editText3"
            android:layout_alignParentStart="true"
            android:drawableLeft="@drawable/ic_email_black_24dp"
            android:hint="Email"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/editText4"
            style="@style/edittext_style"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:breakStrategy="balanced"
            android:fitsSystemWindows="true"
            android:gravity="center_horizontal"
            android:hint="Address"
            android:inputType="textMultiLine"
            android:padding="5dp"
            android:singleLine="false" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp"
            android:text="Gender:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <RadioButton
                android:id="@+id/rdm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:text="Male" />

            <RadioButton
                android:id="@+id/rdf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:text="Female" />

        </RadioGroup>


        <EditText
            android:id="@+id/editText5"
            style="@style/edittext_style"
            android:layout_below="@+id/editText4"
            android:layout_alignParentStart="true"
            android:drawableLeft="@drawable/ic_enhanced_encryption_black_24dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/editText6"
            style="@style/edittext_style"
            android:layout_below="@+id/editText5"
            android:layout_alignParentStart="true"
            android:drawableLeft="@drawable/ic_enhanced_encryption_black_24dp"
            android:ems="10"
            android:hint="Confirm Password"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/button7"
            style="@style/button_background"
            android:layout_width="295dp"
            android:layout_below="@+id/editText6"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="15dp"
            android:text="Submit" />


    </LinearLayout>

</ScrollView>