<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".userDataFrag">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/theme">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/theme"
            android:orientation="vertical"
            android:textAlignment="center"
            android:layout_gravity="top">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=" Searching"
                android:paddingTop="10dp"
                android:layout_gravity="center"
                android:textColor="@android:color/black"
                android:textSize="50dp"
                android:textStyle="bold" />
        </LinearLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
            android:layout_marginVertical="@dimen/activity_vertical_margin"
            android:orientation="vertical">


            <EditText
                android:id="@+id/txtloc"
                android:focusable="true"
                android:drawableLeft="@drawable/ic_account_circle_black_24dp"
                style="@style/edittext_style"
                android:layout_marginTop="49dp"
                android:hint="Enter Location"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/txtdest"
                android:focusable="true"
                android:drawableLeft="@drawable/ic_account_circle_black_24dp"
                style="@style/edittext_style"
                android:layout_marginTop="49dp"
                android:hint="Enter Destination"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/txtdeprt"
                android:focusable="true"
                android:drawableLeft="@drawable/ic_account_circle_black_24dp"
                style="@style/edittext_style"
                android:layout_marginTop="49dp"
                android:hint="Time To Depart"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/txtvech"
                android:focusable="true"
                android:drawableLeft="@drawable/ic_account_circle_black_24dp"
                style="@style/edittext_style"
                android:layout_marginTop="49dp"
                android:hint="Vehicle Details"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/txtpayment"
                android:focusable="true"
                android:drawableLeft="@drawable/ic_account_circle_black_24dp"
                style="@style/edittext_style"
                android:layout_marginTop="49dp"
                android:hint="Method of Payment"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/txtsname"
                android:focusable="true"
                android:drawableLeft="@drawable/ic_account_circle_black_24dp"
                style="@style/edittext_style"
                android:layout_marginTop="49dp"
                android:hint="Person Name"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/btnuser"
                style="@style/button_background"
                android:layout_marginTop="25dp"
                android:text="Save Records"
                android:layout_width="295dp"
                android:layout_gravity="center"
                android:textSize="20sp" />

        </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>
